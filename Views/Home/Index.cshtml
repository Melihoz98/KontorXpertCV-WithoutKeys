@{
    ViewData["Title"] = "Home Page";
}

<div class="category-list-container">
    @await Component.InvokeAsync("CategoryList")
</div>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="~/js/productCardScript.js"></script>

<partial name="_shipment" />
<partial name="_homeImage" />

@Html.Partial("_OfficeSection")

@await Html.PartialAsync("_LatestProducts")

@Html.Partial("_WeBuySection")

<style>
    @@media (max-width: 1270px) {
        .category-list-container {
            display: none;
        }
    }
    .ad-banner {
        display: flex;
        align-items: center;
        background-color: #f0f4f8;
        padding: 20px;
        border-radius: 10px;
    }

    .ad-content {
        flex: 1;
        padding-right: 20px;
    }

    .ad-content h2 {
        font-size: 24px;
        font-weight: bold;
    }

    .ad-content p {
        font-size: 18px;
        margin: 10px 0;
    }

    .ad-content em {
        font-style: italic;
        font-weight: bold;
    }

    .ad-content button {
        padding: 10px 20px;
        background-color: #a4e056;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
    }

    .ad-image {
        flex: 1;
        text-align: right;
    }

    .ad-image img {
        max-width: 100%;
        border-radius: 10px;
    }
</style>
